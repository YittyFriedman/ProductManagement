@model ProductManagementApplication.Models.DTO.ResetPasswordConfirmModel

@{
    ViewBag.Title = "ResetPasswordConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Reset Password</h2>*@
<br />
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>

        <legend>Reset Password</legend>

        <table>
            <tr>
                <td> New Password&nbsp;</td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.NewPassword,
           new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </div>
                </td>
            </tr>
            <tr>
                <td style="padding-top:20px">Confirm New Password&nbsp;</td>
                <td style="padding-top:20px">
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ConfirmPassword,
          new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </td>
            </tr>
        </table>
        @Html.Hidden(Request.Params["Token"])



        <p>
            <br />
            <input type="submit" class="btn btn-primary" value="Reset Password" />
        </p>
    </fieldset>
}
